pipeline {
    agent any
    tools { 
      maven 'maven3' 
      }
    environment{
      def mvnHome =  tool name: 'maven3', type: 'maven' 
      def BRANCH_NAME ='GIT_BRANCH'
  }
stages {
      stage('GIT checkout') {
                    steps {
                        script{
                               if (env.GIT_BRANCH.contains('main')) {
                            echo 'Hello from main branch'
                            git branch: 'main', url: 'https://github.com/PandeeswariSubbaiya/Testingjenkins_Repo.git'
                            }
                               else {
                                   echo "Run this stage only if the branch is not main"
                                  git branch: 'release', url: 'https://github.com/PandeeswariSubbaiya/Testingjenkins_Repo.git' 
                               }
                               }
                          }
                        }
    stage('Merge to main') {
            steps {
                git branch: 'main', url: 'https://github.com/PandeeswariSubbaiya/Testingjenkins_Repo.git'
                git checkout: 'main'
                sh 'git merge release'
                git push
            }
        }
    stage('Pull request') {
        steps {
            withCredentials([string(credentialsId: 'GITHUB_TOKEN', variable: 'GITHUB_TOKEN')]) {
                sh '''
                        curl -d '{"title": "Merge changes from dev to main", "head": "main", "base": "release"}' -H "Authorization: token $GITHUB_TOKEN" -H "Content-Type: application/json" https://api.github.com/repos/PandeeswariSubbaiya/Automated/pulls
                    '''
                    }
                 }
             }
     }
  }

pipeline {
  agent any

  stages {
    stage('Build') {
      steps {
        echo 'Building...'
      }
    }

    stage('Test') {
      steps {
        echo 'Testing...'
      }
    }

    stage('Merge to main') {
      steps {
        script {
          git branch: 'release', url: 'https://github.com/PandeeswariSubbaiya/Testingjenkins_Repo.git'
          git checkout: 'release'
          sh "git merge --no-ff origin/release"
          git checkout: 'main'
          sh "git merge --no-ff origin/release"
          git push origin main
        }
      }
    }

    stage('Create pull request') {
      steps {
        script {
          sh 'curl -X POST https://api.github.com/repos/PandeeswariSubbaiya/Testingjenkins_Repo/pulls \
              -H "Authorization: token git-cred-token" \
              -d \'{"title": "Merge release to main", "head": "release", "base": "main"}\''
        }
      }
    }
  }
}
